<h2 class="sign-up-header text-center">Sign up</h2>
<div class="sign-up-form text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
    <%= devise_error_messages! %>
  	<div class="form-group sign-up-form-group">
  		<%= f.label :name , autofocus: true, class: "signup-label"%>
  		<%= f.text_field :name, class: "form-control" %>
  	</div>

  	<div class="form-group sign-up-form-group">
      <%= f.label :surname, class: "signup-label" %>
      <%= f.text_field :surname, class: "form-control" %>
    </div>

    <div class="form-group sign-up-form-group">
      <%= f.label :email, class: "signup-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group sign-up-form-group">
      <%= f.label :password, class: "signup-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group sign-up-form-group">
      <%= f.label :password_confirmation, class: "signup-label"%>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <%= f.label :avatar do %>
        <p class="text-center">Choose your profile picture</p>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
    <% end %>

    <div class="actions sign-up-form-group">
      <%= f.submit "Sign up", class: "btn btn-outline-success btn-customize" %>
      <%= link_to 'Go back', :back, role: 'button', class: 'btn btn-outline-success btn-customize' %>
    </div>
    <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>

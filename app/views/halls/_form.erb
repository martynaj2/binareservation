<%=  form_for @hall, validate: true do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, class: "form-control col-md-2 text-center", placeholder: "Enter name of room"%>

  </div>


  <div class="form-group">
    <%= f.label :capacity, class: "control-label" %>
    <%= f.number_field :capacity, class: "form-control col-md-1 text-center"%>
  </div>

  <%= f.submit 'save', role: 'button', class:"btn btn-outline-success btn-customize" %>
<% end %>

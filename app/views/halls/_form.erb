<%=  form_for @hall, validate: true do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "control-label" %>
    <%= f.text_field :title, class: "form-control col-md-2 text-center", placeholder: "Enter name of room"%>

  </div>


  <div class="form-group">
    <%= f.label :capacity, class: "control-label" %>
    <%= f.select :capacity, options_for_select([['Small (<5)', 5], ['Medium (5-10)', 10], ['Large(10-20)', 20], ['Extra Large (>20)', 25]]), {}, {class: "form-control col-md-1 text-center"} %>
    <small id="ageHelpBlock" class="form-text text-muted">
      Capacity of the room
    </small>
  </div>

  <%= f.submit 'save', role: 'button', class:"btn btn-outline-success btn-customize" %>
<% end %>

<%=  form_for @hall, validate: true do |f| %>
  <div class="new-room text-center">
    <div class="form-group">
      <%= f.label :title, class: "control-label" %>
      <%= f.text_field :title, class: "form-control col-md-3 text-center col-centered", placeholder: "Enter name of room"%>
    </div>

    <div class="form-group">
      <%= f.label :capacity, class: "control-label" %>
      <%= f.select :capacity, options_for_select([['Small (<5)', 5], ['Medium (5-10)', 10], ['Large (10-20)', 20], ['Extra Large (>20)', 25]]), {}, {class: "form-control col-md-2 text-center col-centered"} %>
      <small id="ageHelpBlock" class="form-text text-muted">
        Capacity of the room
      </small>
    </div>

    <div class="form-group">
      <%= f.label :hall_color, class: "control-label" %>
      <%= f.text_field :hall_color, class: "form-control col-md-2 text-center col-centered", placeholder: "Enter color"%>
    </div>

    <%= f.submit 'save', role: 'button', class:"btn btn-outline-success btn-customize" %>
    <%= link_to 'Go back', :back, role: 'button', class: 'btn btn-outline-success btn-customize' %>
  </div>
<% end %>

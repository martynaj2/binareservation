<div class="halls-index">
  <h1 class="text-center"> Rooms list </h1>
  <div class ="row filter-buttons col-md-12 text-center">
    <%= link_to 'All rooms', halls_path, role: 'button', class:'btn btn-danger btn-customize btn-filter'  %>
    <%= link_to 'Small', halls_path(:small => true), role: 'button', class:'btn btn-danger btn-customize btn-filter' %>
    <%= link_to 'Medium', halls_path(:medium => true), role: 'button', class:'btn btn-danger btn-customize btn-filter' %>
    <%= link_to 'Large', halls_path(:large => true), role: 'button', class:'btn btn-danger btn-customize btn-filter' %>
    <%= link_to 'Extra large', halls_path(:extra_large => true), role: 'button', class:'btn btn-danger btn-customize btn-filter' %>
  </div>
    <div class="halls-index col-md-8 col-centered">
        <% @halls.each do |hall| %>
         <%= render 'hall', hall: hall %>
        <% end %>
    </div>
</div>

<div class="text-center">
  <%= will_paginate @articles, :previous_label => '<i class="fa fa-arrow-circle-left"></i>', :next_label => '<i class="fa fa-arrow-circle-right"></i>'%>
</div>

<% if current_user.admin? %>
  <div class="text-center"><%= link_to 'Add new room', new_hall_path, role: 'button', class: "btn btn-outline-success btn-customize" %></div>
<% end %>

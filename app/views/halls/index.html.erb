<div class="halls-index text-center">
  <h1 class="text-center"> Halls list </h1>
     <ol>
       <% @halls.each do |hall| %>
         <li>
          <%= "Hall's name: " %>
          <%= link_to "#{hall.title}", hall_path(id: hall.id)%>
          <%= "capacity: #{hall.capacity}" %>
         </li>
       <% end %>
     </ol>
</div>

<div class="row" data-reservation-id="<%= reservation.id %>">
  <div class="col-sm-12 col-md-9"><%= link_to reservation.title, reservation_path(id: reservation.id) %></div>
  <div class="col-md-3">
      <%= link_to 'Edit', edit_reservation_path(id: reservation.id),role: 'button', class:'btn btn-primary text-center' %>
      <%= link_to 'Delete', reservation_path(id: reservation.id), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, role: 'button', class:'btn btn-danger text-center' %>
  </div>
</div>

   <%= form_for @reservation do |f| %>
     <%= f.label :title %>
     <%= f.text_field :title %>
     <hr />
     <%= f.label :description %>
     <%= f.text_field :description %>
     <hr />
     <%= f.label :number_of_people %>
     <%= f.number_field :number_of_people %>
     <hr />
     <%= f.label :start_date %>
     <%= f.datetime_local_field :start_date %>
     <hr />
     <%= f.label :end_date %>
     <%= f.datetime_local_field :end_date %>
     <hr />
     <!-- <%= "Inviter: #{current_user.fullname}" %>
     <hr />
     <%= f.label :inviter %>
     <%= f.text_field :inviter %>
     <hr /> -->
     <%= f.label :user_id %>
     <%= f.collection_select(:user_id, User.all, :id, :fullname) %>
     <%= f.submit 'Save' %>
   <%  end %>


<div class="container">

	<h2>For verification : </h2>

	<% @users.each do |user| %>
		<% if !user.is_verified? %>
			<div data-user-id="<%= user.id %>" class="row">
			  <%= user.fullname %><br>
			  <%= user.email %>
				<%= link_to "Verify", edit_verify_path(id: user.id) %>
				<%= link_to "Destroy", user_path(user), method: :delete, data: { confirm: "You sure?" } %>
			</div>
		<% end %>
	<% end %>
</div>

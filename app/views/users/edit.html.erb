<%= form_for @user do |f| %>

	<div class="form-group">
		<%= f.label :name , autofocus: true%><br />
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
    <%= f.label :surname %><br />
    <%= f.text_field :surname, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h1 class="text-center"> Edit profile </h1>
<div class="container text-center">
  <div class="login-container edit">
		<%= form_for @user, validate: true  do |f| %>
      <div id="output"></div>
			<% if current_user.avatar.url.present? %>
      	<div class="avatar"><%= image_tag current_user.avatar.url, class:"rounded-circle", style:"width:100px; height:100px", :alt => "avatar" %></div>
			<% end %>
			<div class="row justify-content-around">
				<div class="form-group col-md-5">
					<%= f.label :name , autofocus: true %>
					<%= f.text_field :name, class: "form-control" %>
				</div>

				<div class="form-group col-md-5">
				  <%= f.label :surname %>
				  <%= f.text_field :surname, class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
			  <%= f.label :email %>
			  <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
			</div>

			<% if current_user.avatar.url.present? %>
			  <div class="form-group">
				<%= f.label :remove_avatar %>
				<%= f.check_box :remove_avatar %>
				<%= f.file_field :avatar, class: "form-control" %>
				<%= f.hidden_field :avatar_cache %>
				</div>
			<% else %>
			  <div class="form-group">
				<%= f.label :avatar %>
			  <%= f.file_field :avatar, class: "form-control" %>
			  <%= f.hidden_field :avatar_cache %>
				</div>
			<% end %>
			<div class="actions">
				<%= f.submit "Update", role: 'button', class: 'btn btn-outline-success btn-customize' %>
				<%= link_to 'Go back', :back, role: 'button', class: 'btn btn-outline-success btn-customize' %>
			</div>
		<% end %>
  </div>
</div>

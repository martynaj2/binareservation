<div class="user-data text-center">
	<h3 class="profile-header"> My profile </h3>
	Name :
	<%= current_user.fullname %>
	<br>
	E-mail :
	<%= current_user.email %>

	<% if current_user.vacation %>
	You are on vacation
	<% end %>

	<% unless current_user.avatar.url.present? %>
		<%= image_tag("/uploads/user/avatar/default/blank-avatar-300x300.png", class:"rounded-circle", style:"width:100px; height:100px", :alt => "avatar") %>
	<% else %>
		<%= image_tag current_user.avatar.url, class:"rounded-circle", style:"width:100px; height:100px", :alt => "avatar"%>
	<% end %>

	<div class="profile-buttons">
		<%= link_to 'Edit', edit_user_path(id: current_user.id), class:'btn btn-outline-success btn-customize' %>
		<%= link_to "Change your password", edit_user_registration_path, class:'btn btn-outline-success btn-customize' %>
		<%= link_to "Set Vacation", vacation_user_path(id: current_user.id), method: :put, class:'btn btn-outline-success btn-customize' %>
	</div>
</div>
